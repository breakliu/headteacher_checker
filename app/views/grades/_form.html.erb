<%= simple_form_for(@grade, :html => { :class => 'form-horizontal' } ) do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :teacher_name %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, '确 定', :class => "btn btn-primary" %>
    <%= link_to '取 消', grades_path, :class => "btn" %>
  </div>
<% end %>
